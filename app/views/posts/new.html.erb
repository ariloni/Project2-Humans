<h1>New Post</h1>

<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :image %><br>
    <%= f.file_field :image%>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :landmark %><br>
    <%= f.text_area :landmark %>
  </p>
  <p>
    <%= f.label :city %><br>
    <%= f.text_area :city %>
  </p>
  <p>
    <%= f.label :state %><br>
    <%= f.text_area :state %>
  </p>
  <p>
    <%= f.label :country %><br>
    <%= f.text_area :country %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>